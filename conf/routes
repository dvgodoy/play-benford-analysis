# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET        /                            controllers.Application.root
GET        /load                        controllers.BenfordBootstrap.load
GET        /calc                        controllers.BenfordBootstrap.calculate
GET        /ci                          controllers.Application.ci
GET        /CIsByGroup/:id              controllers.BenfordBootstrap.getCIsByGroup(id: Int)
GET        /BenfCIsByGroup/:id          controllers.BenfordBootstrap.getBenfordCIsByGroup(id: Int)
GET        /CIsByLevel/:level           controllers.BenfordBootstrap.getCIsByLevel(level: Int)
GET        /BenfCIsByLevel/:level       controllers.BenfordBootstrap.getBenfordCIsByLevel(level: Int)
GET        /ResultsByGroup/:id          controllers.BenfordBootstrap.getResultsByGroup(id: Int)
GET        /ResultsByLevel/:level       controllers.BenfordBootstrap.getResultsByLevel(level: Int)
GET        /FreqByGroup/:id             controllers.BenfordBootstrap.getFreqByGroup(id: Int)
GET        /FreqByLevel/:level          controllers.BenfordBootstrap.getFreqByLevel(level: Int)

# Home page

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)
