# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Sync routes
GET        /                            controllers.Application.root

# Async routes - to be called through Ajax only!
GET        /Aload                        controllers.BenfordBootstrap.load
GET        /Acalc                        controllers.BenfordBootstrap.calculate
GET        /ACIsByGroup/:id              controllers.BenfordBootstrap.getCIsByGroup(id: Int)
GET        /ABenfCIsByGroup/:id          controllers.BenfordBootstrap.getBenfordCIsByGroup(id: Int)
GET        /ACIsByLevel/:level           controllers.BenfordBootstrap.getCIsByLevel(level: Int)
GET        /ABenfCIsByLevel/:level       controllers.BenfordBootstrap.getBenfordCIsByLevel(level: Int)
GET        /AResultsByGroup/:id          controllers.BenfordBootstrap.getResultsByGroup(id: Int)
GET        /AResultsByLevel/:level       controllers.BenfordBootstrap.getResultsByLevel(level: Int)
GET        /AFreqByGroup/:id             controllers.BenfordBootstrap.getFreqByGroup(id: Int)
GET        /AFreqByLevel/:level          controllers.BenfordBootstrap.getFreqByLevel(level: Int)
GET        /Aprogress                    controllers.Application.progress

# Home page

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                controllers.Assets.versioned(path="/public", file: Asset)
